<div class="row justify-content-md-center h-100">
	<div class="card-wrapper">
		<div class="card fat">
			<div class="card-body">
				<h4 class="card-title">Add Post</h4>
				<form action="/post/create" id="loginForm" method="POST" class="my-login-validation" novalidate="">
					<div class="form-group">
						<label for="title">Title</label>
						<input id="title" type="texte" class="form-control" name="title" value="{{oldInput.title}}" required autofocus>
						<div class="invalid-feedback">
							Email is invalid
						</div>
					</div>

					<div class="form-group">
						<label for="content">Content</label>
						<input id="content" type="texte" class="form-control" name="content" value="{{oldInput.title}}" required autofocus>
						<div class="invalid-feedback">
							content is invalid
						</div>
					</div>
					
					{{#if errorMessage}}
					<div class="alert alert-danger" role="alert">
						{{errorMessage}}
					</div>
					{{/if}}
					<div class="form-group m-0">
						<input type="hidden" name="_csrf" value="{{csrfToken}}" >
						<button type="submit" id="btnLoginSubmit" class="btn btn-primary btn-block">
							Submit
						</button>
					</div>
				</form>
			</div>
		</div>
		<div class="footer">
			Copyright &copy; 2021 &mdash; Your Company 
		</div>
	</div>
</div>