
<div class="container">
	<h1>list des posts</h1>

	

	<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">title</th>
      <th scope="col">Content</th>
      <th scope="col">User Name</th>
	  <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody>
	{{#each posts}}
		<tr>
		<th scope="row">{{this.id}}</th>
		<td>{{this.title}}</td>
		<td>{{this.content}}</td>
		<td>{{this.user.fullName}}</td>
		<td><a href="/post/create"> create</a> - <a href="/post/delete/{{this.id}}"> delete</a></td>
		</tr>
	{{/each}}
  </tbody>
</table>

</div>